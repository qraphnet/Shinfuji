{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "incremental": true,
    "target": "esnext",
    "module": "node16",
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "removeComments": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/__tests__/**/*.ts", "./**/*.test.ts"]
}
